extends ../node_modules/jade-bootstrap/layouts/starter

append styles
	// Custom styles for this template
	link(href='../css/sticky-footer.css', rel='stylesheet')

block body
	+navbar-fixed("CS Searcher","navbar","inverse")
		+nav_item("/","active") Home
		+nav_item("/about") About
		+nav_item("/contact") Contact
	.container
		.starter-template
			h1= title
			h3 Welcome to #{title}
			h4 #{readme}
			form(action="/request", method="post")
				input(type="text", name="keyword")
				input(type="submit")
		if alertContent
			+alert-info(alertContent)
		if queryResult
			-for(var prop in queryResult)
				p #{prop}: #{queryResult[prop]}
	footer.footer
		.container
			p.text-muted Computer Network 2016, CS Department, Peking University
